          <inertial>
            <origin xyz="0 0 1" rpy="0 0 0"/>
            <mass value="1"/>
            <inertia
              ixx="1.0" ixy="0.0" ixz="0.0"
              iyy="1.0" iyz="0.0"
              izz="1.0"/>
          </inertial>
        </link>
        <joint name='upper_level_sperator_3_joint' type='fixed'>
          <parent link='upper_level'/>
          <child link='seperator_3'/>
